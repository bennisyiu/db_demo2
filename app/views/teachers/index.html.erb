<div class="container">
  <h1>All Teachers</h1>
  <br>
  <div class="row">
    <% @teachers.each_with_index do |teacher, index| %>
      <div class="col-xs-12 col-sm-4 ">
        <h4>No. <%= index+1 %> - <%= teacher.first_name %> <%= teacher.last_name %></h4>
        <p>Major: <%= teacher.major %> </p>
        <p>- - - - - - - - - - - - - - - - - - - - - - - - - - - - </p>
        <br>
      </div>
    <!-- add student & teacher details here -->
    <% end %>
  </div>
</div>
